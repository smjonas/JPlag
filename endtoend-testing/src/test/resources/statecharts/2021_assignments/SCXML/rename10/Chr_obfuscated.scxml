<?xml version="1.0" encoding="UTF-8"?>
<scxml xmlns="http://www.w3.org/2005/07/scxml" version="1.0" datamodel="ecmascript" name="Chr">
	<datamodel>
		<data expr="0" id="stopsAt" />
		<data expr="6" id="remainingCapacity" />
		<data expr="0" id="numPassengers" />
		<data expr="24" id="maxSpeed" />
		<data expr="false" id="block" />
		<data expr="false" id="hadEmergency" />
		<data expr="false" id="isMoving" />
	</datamodel>
	<state id="main_region">
		<initial>
			<transition target="lF1JrMoqVc" type="internal">
			</transition>
		</initial>
		<parallel id="lF1JrMoqVc">
			<state id="TrolleyControl">
				<initial>
					<transition target="NormalOperation" type="internal">
					</transition>
				</initial>
				<state id="EmergencyStop">
					<onentry>
						<send event="setTargetSpeed">
						<content expr="0" />
						</send>
						 <assign location="hadEmergency" expr="true"/>
					</onentry>
					<transition event="atTargetSpeed"  target="Arriving">
					</transition>
				</state>
				<state id="NormalOperation">
					<initial>
						<transition target="NormalOperation.choice_0" type="internal">
						</transition>
					</initial>
					<state id="Accelerating">
						<onentry>
							 <assign location="isMoving" expr="true"/>
							<send event="setTargetSpeed">
							<content expr="maxSpeed" />
							</send>
						</onentry>
						<transition event="atTargetSpeed"  target="TopSpeed">
						</transition>
					</state>
					<state id="OnVcrrvXDl">
						<onentry>
							<send event="OnVcrrvXDl_t_0_timeEvent_0" delay="2000ms"/>
						</onentry>
						<onexit>
							<cancel sendid="OnVcrrvXDl_t_0_timeEvent_0" />
						</onexit>
						<transition event="OnVcrrvXDl_t_0_timeEvent_0"  target="ClosingDoorsSoon">
						</transition>
					</state>
					<state id="TopSpeed">
						<transition event="approachingStation" cond="(stopsAt &amp; (1 &lt;&lt; _event.data)) != 0" target="Decelerating">
						</transition>
					</state>
					<state id="Decelerating">
						<onentry>
							<send event="setTargetSpeed">
							<content expr="0" />
							</send>
						</onentry>
						<transition event="atTargetSpeed"  target="Arriving">
						</transition>
					</state>
					<state id="ClosingDoorsSoon">
						<onentry>
							<send event="checkIfMoveNeeded">
							</send>
							 <assign location="hadEmergency" expr="false"/>
						</onentry>
						<transition event="checkIfMoveNeeded" cond="stopsAt != 0" target="ClosingDoors">
						</transition>
					</state>
					<state id="HBcfzX9jIR">
						<onentry>
							 <assign location="stopsAt" expr="stopsAt &amp; ~(1 &lt;&lt; _event.data)"/>
							<send event="openAllDoors">
							</send>
							<send event="refreshUI">
							</send>
						</onentry>
						<transition   target="OnVcrrvXDl">
						</transition>
					</state>
					<state id="NormalOperation.choice_0">
						<transition  cond="hadEmergency == true" target="ClosingDoorsSoon">
						</transition>
						<transition   target="OnVcrrvXDl">
						</transition>
					</state>
					<state id="ClosingDoors">
						<onentry>
							<send event="attemptClosingDoors">
							</send>
						</onentry>
						<transition event="doorsAreClosed"  target="qiAo5cmhuM">
						</transition>
					</state>
					<state id="qiAo5cmhuM">
						<onentry>
							<send event="qiAo5cmhuM_t_0_timeEvent_0" delay="1000ms"/>
						</onentry>
						<onexit>
							<cancel sendid="qiAo5cmhuM_t_0_timeEvent_0" />
						</onexit>
						<transition event="qiAo5cmhuM_t_0_timeEvent_0"  target="Accelerating">
						</transition>
					</state>
					<state id="Arriving">
						<onentry>
							<send event="Arriving_t_0_timeEvent_0" delay="1000ms"/>
						</onentry>
						<onexit>
							<cancel sendid="Arriving_t_0_timeEvent_0" />
						</onexit>
						<onentry>
							 <assign location="isMoving" expr="false"/>
						</onentry>
						<transition event="Arriving_t_0_timeEvent_0"  target="HBcfzX9jIR">
						</transition>
					</state>
					<transition event="startEmergency"  target="lF1JrMoqVc.TrolleyControl.choice_0">
					</transition>
				</state>
				<state id="EmergencyHalted">
					<onentry>
						<send event="openAllDoors">
						</send>
					</onentry>
					<transition event="stopEmergency"  target="NormalOperation">
					</transition>
				</state>
				<state id="Arriving">
					<onentry>
						<send event="Arriving_t_0_timeEvent_0" delay="1000ms"/>
					</onentry>
					<onexit>
						<cancel sendid="Arriving_t_0_timeEvent_0" />
					</onexit>
					<onentry>
						 <assign location="isMoving" expr="false"/>
					</onentry>
					<transition event="Arriving_t_0_timeEvent_0"  target="EmergencyHalted">
					</transition>
				</state>
				<state id="lF1JrMoqVc.TrolleyControl.choice_0">
					<transition  cond="isMoving == false" target="Arriving">
						 <assign location="hadEmergency" expr="true"/>
					</transition>
					<transition   target="EmergencyStop">
					</transition>
				</state>
			</state>
			<state id="DoorControl">
				<initial>
					<transition target="c1EaVQoSwh" type="internal">
					</transition>
				</initial>
				<state id="DoorsClosed">
					<onentry>
						<send event="stopDoorsSignal">
						</send>
						<send event="doorsAreClosed">
						</send>
						<send event="closeDoors">
						</send>
						<send event="refreshUI">
						</send>
					</onentry>
					<transition event="openAllDoors"  target="c1EaVQoSwh">
					</transition>
				</state>
				<state id="c1EaVQoSwh">
					<onentry>
						<send event="doorsAreOpened">
						</send>
						<send event="openDoors">
						</send>
						<send event="refreshUI">
						</send>
					</onentry>
					<transition event="attemptClosingDoors"  target="fjGdPDEo7i">
					</transition>
				</state>
				<state id="fjGdPDEo7i">
					<onentry>
						<send event="fjGdPDEo7i_t_0_timeEvent_0" delay="1000ms"/>
					</onentry>
					<onexit>
						<cancel sendid="fjGdPDEo7i_t_0_timeEvent_0" />
					</onexit>
					<onentry>
						<send event="startDoorsSignal">
						</send>
					</onentry>
					<transition event="fjGdPDEo7i_t_0_timeEvent_0" cond="block == false" target="DoorsClosed">
					</transition>
					<transition event="unblockDoors"  target="fjGdPDEo7i">
					</transition>
				</state>
			</state>
			<state id="PassengerControl">
				<initial>
					<transition target="Board" type="internal">
					</transition>
				</initial>
				<state id="Board">
					<onentry>
						 <assign location="block" expr="false"/>
						<send event="unblockDoors">
						</send>
					</onentry>
					<transition event="unboard" cond="numPassengers &lt;= 6 &amp;&amp; numPassengers &gt; 0 &amp;&amp; block == false" target="aXl8RRjyOR">
						 <assign location="numPassengers" expr="numPassengers - 1"/>
						 <assign location="remainingCapacity" expr="remainingCapacity + 1"/>
						 <assign location="block" expr="true"/>
						<send event="refreshUI">
						</send>
					</transition>
					<transition event="board" cond="numPassengers &lt; 6 &amp;&amp; numPassengers &gt;= 0 &amp;&amp; block == false" target="aXl8RRjyOR">
						 <assign location="numPassengers" expr="numPassengers + 1"/>
						 <assign location="remainingCapacity" expr="remainingCapacity - 1"/>
						 <assign location="block" expr="true"/>
						<send event="refreshUI">
						</send>
					</transition>
					<transition event="doorsAreClosed"  target="YW8lbKl1rt">
					</transition>
				</state>
				<state id="YW8lbKl1rt">
					<transition event="doorsAreOpened"  target="Board">
					</transition>
				</state>
				<state id="aXl8RRjyOR">
					<onentry>
						<send event="aXl8RRjyOR_t_0_timeEvent_0" delay="1000ms"/>
					</onentry>
					<onexit>
						<cancel sendid="aXl8RRjyOR_t_0_timeEvent_0" />
					</onexit>
					<transition event="aXl8RRjyOR_t_0_timeEvent_0"  target="Board">
					</transition>
				</state>
			</state>
			<state id="RequestHandler">
				<initial>
					<transition target="handleRequest" type="internal">
					</transition>
				</initial>
				<state id="handleRequest">
					<onexit>
						 <assign location="stopsAt" expr="stopsAt | (1 &lt;&lt; _event.data)"/>
						<send event="checkIfMoveNeeded">
						</send>
						<send event="refreshUI">
						</send>
					</onexit>
					<transition event="requestStop"  target="handleRequest">
					</transition>
				</state>
			</state>
		</parallel>
	</state>
</scxml>
